@import "zen";

@mixin vertical-align {
    position: relative;
    top: 50%;
    -webkit-transform: translateY(50%);
    -ms-transform: translateY(50%);
    transform: translateY(50%);
}
  $zen-column-count: 5;
  $zen-gutter-width: 10px;
// Create page layout
.f-wrapper{
  @include zen-grid-container;
  #block-menu-menu-popular-links{
    @include zen-grid-item(1, 1);
    .field-content, a{
      color: white;
    }
  }
  #block-views-tumblr-view-block{
    @include zen-grid-item(1, 2);
  }
  .footer-logo{
    @include zen-grid-item(1, 3);
    .field-item{
      text-align: center;
    }
  }
  .footer-description{
   @include zen-clear(right);
    @include zen-grid-item(2, 1, right);
    .field-content, a{
      color: white;
    }
    p {
      font-size: 80%;
    }
  }
  .footer-hours{
    @include zen-clear(right);
    @include zen-grid-item(2, 1, right);
    .field-content, a{
      color: white;
    }
  }
  
 #block-views-social-links-block{
   $zen-gutter-width: 0px;
    @include zen-clear(both);
    @include zen-grid-item(5, 1);
    background-color: rgba(054, 054, 054, .8) !important;
  }
}

.front{
  body{
    overflow: hidden !important;
    background-attachment: fixed;
  }
}



